<% layout("/layouts/boilerplate") %>
  <body>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings">
      <div class="mb-3">
        <label for="title" class="form-label" >Title</label>
        <input name="listing[title]"  type="text" class="form-control" required />
        <div class="invalid-feedback">
          Please enter a valid title.
      </div>
      </div>
      <div class="mb-3">
      <label for="description" class="form-label" >Description</label>
      <textarea
        name="listing[description]"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">
        Please enter a valid description.
      </div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label" >Upload Listing Image</label>
          <input
          name="listing[image]"
          class="form-control"
          type="file"
          required
        />
        </div>
      <div class="mb-3">
        <label for="price" class="form-label" >Price</label>
        <input name="listing[price]"   class="form-control" required />
        <div class="invalid-feedback">
          Please enter a valid price.
        </div>
      </div>
      <div class="mb-3">
        <label for="country" class="form-label" >Country</label>
        <input name="listing[country]"  type="text" class="form-control" required />
        <div class="invalid-feedback">
          Please enter a valid country.
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label" >Location</label>
        <input
        name="listing[location]"
        type="text"
        class="form-control"
        required
      />
      <div class="invalid-feedback">
        Please enter a valid location.
      </div>
      </div>
      <div class="mb-3">
        <button class="btn btn-dark add-btn">Add</button>
      </div>
    </form>
  </div>
  </div>
  <br>
</body>
